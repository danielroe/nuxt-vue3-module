{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "nuxt-vue3": ["./src/index.ts"],
      "nuxt-vue3/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
